rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User-specific access
    match /users/{userId} {
      // Allow users to access their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to access their own listings
      match /listings/{listingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Global access to all listings for authenticated users
    match /{path=**}/listings/{listingId} {
      // Allow read access to all listings for authenticated users
      allow read: if request.auth != null;

      // Write access restricted to the owner of the listing
      allow write: if request.auth != null && request.resource.data.owner.uid == request.auth.uid;
    }
  }
}
